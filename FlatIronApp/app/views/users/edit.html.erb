<br>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <li><%= error %></li>
  <% end %>
<% end %>


<%= form_for (@user) do |f| %>
  <%= f.label :first_name%>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name%>
  <%= f.text_field :last_name %><br>
  <%= f.label :mod%>
  <%= f.text_field :mod %><br>
  <%= f.label :hobbies%>
  <%= f.text_area :hobbies %><br>
  <%= f.label :user_name%>
  <%= f.text_field :user_name %><br><br>
  <%= f.submit %><br>
<% end %>
